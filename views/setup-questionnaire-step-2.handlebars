<div class="container">
    <form action="/setup-questionnaire/add" method="POST">
               <h1>Setup Questionnaire - Step 2</h1>
               <h3>Add Questions:</h3>
               <textarea row="3" cols="50" placeholder="Enter question here" required></textarea>
               <input type="submit">
    </form>


    <h3>Questions Added:</h3>
    <table>
    {{#each questions}}
        <tr>
            <td>{{question_description}}</td>
                <td><a href="/setup-questionnaire/edit/{{question_id}}">edit</a></td>
                <td><a href="/setup-questionnaire/delete/{{question_id}}">delete</a></td>
        </tr>
    {{/each}}
</div>