<div>
    <h1>Registration</h1>
    <form class="form-inline" method="post" action="/signup/add">
        <h2>Organization details:</h2>
          <div class="form-group">
        <label>Company Name:</label><input type="text" class="form-control" name="name" required/>
        <label>Address:</label><input type="text" class="form-control" name="address" required/>
        <label>Logo:</label><input type="text" class="form-control" name="logo" required/>

        <h2>User details:</h2>
        <label>First Name:</label><input type="text" class="form-control" name="firstName" required/>
        <label>Last Name:</label><input type="text" class="form-control" name="lastName" required/>
        <label>E-mail:</label><input type="email" class="form-control" name="email" required/><br>
<input class="btn btn-primary" type="submit" />
</div>

    </form>
</div>
